<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/small_native_layout_id"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/small_native_layout_image_id"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
         <LinearLayout
             android:orientation="vertical"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="8dp"
             android:gravity="center_vertical"
             >
             <TextView
                 android:id="@+id/small_native_layout_header_id"
                 android:paddingVertical="4dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="14sp"
                 android:textColor="@color/gnt_black"
                 android:text="dfadadasdasasdas"
                 />
             <LinearLayout
                 android:paddingVertical="4dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="AD"
                     android:textColor="@color/gnt_white"
                     android:background="@color/gnt_blue"
                     android:layout_marginEnd="4dp"
                     />
                 <TextView
                     android:id="@+id/small_native_layout_body_id"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:textColor="@color/gnt_black"
                     android:text="dfadadasdasasdas"
                     />
             </LinearLayout>

             <Button
                 android:id="@+id/small_native_layout_cta_id"
                 android:layout_width="wrap_content"
                 android:textColor="@color/gnt_white"
                 android:background="@color/gnt_blue"
                 android:layout_height="wrap_content"
                 android:padding="8dp"/>
         </LinearLayout>

    </LinearLayout>

</com.google.android.gms.ads.nativead.NativeAdView>